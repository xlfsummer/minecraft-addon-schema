{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Minecraft behavior pack entity schema",
    "type": "object",
    "properties": {
        "minecraft:entity": {
            "properties": {
                "format_version": {
                    "type": "string",
                    "default": "1.2.0"
                },
                "component_groups":{
                    "type": "object"
                },
                "components": {
                    "$ref": "./minecraft-components.json"
                },
                "events":{
                    "type": "object"
                }
            }
        }
    }
}
